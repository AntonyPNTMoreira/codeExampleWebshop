
@model FormOfEducationCreateViewModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Maak een opleidingsvorm aan";
}

<div class="py-3 d-flex align-items-center justify-content-center">
    <form asp-controller="FormOfEducation" asp-action="Create" method="post" enctype="multipart/form-data">
        <h1>Maak een opleidingsvorm aan</h1>

        <div class="form-group py-2">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group py-2">
            <label asp-for="DisplayOrder"></label>
            <input asp-for="DisplayOrder" onfocus="this.select()" class="form-control">
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>
        <div class="form-group py-2">
            <label asp-for="Description"></label>
            <input asp-for="Description" class="form-control">
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        
        <div>
            <span class="text-danger">@TempData["Error"]</span>
        </div>

        <button type="submit" class="btn btn-primary mt-2">Opslaan</button>
        <a asp-area="Admin" asp-controller="FormOfEducation" asp-action="Index"
           class="btn btn-secondary mt-2">Terugkeren</a>
    </form>
</div>
