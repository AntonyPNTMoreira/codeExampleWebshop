
@model OrderIndexViewModel

@{
    Layout = "_Layout";
    ViewData["Title"] = "Bestelling";
}

<section class="py-3 text-center container">
    <div class="row py-lg-3">
        <div class="col-lg-12 col-md-8 mx-auto">

            <h1 class="fw-light">Bestellingen</h1>
            <div class="form-group w-25 mx-auto mt-5 mb-5">
                <select class="form-control" onchange="location.href = '/Admin/Order/ShowSelectedOrders/' + this.value">
                    @if (ViewBag.Id == 1)
                    {
                        <option class="text-center" selected value="1">Alle Bestellingen</option>
                        <option class="text-center" value="2">Open Bestellingen</option>
                        <option class="text-center" value="3">Gesloten Bestellingen</option>
                    }
                    else if (ViewBag.Id == 2)
                    {
                        <option class="text-center" value="1">Alle Bestellingen</option>
                        <option class="text-center" selected value="2">Open Bestellingen</option>
                        <option class="text-center" value="3">Gesloten Bestellingen</option>
                    }
                    else
                    {
                        <option class="text-center" value="1">Alle Bestellingen</option>
                        <option class="text-center" value="2">Open Bestellingen</option>
                        <option class="text-center" selected value="3">Gesloten Bestellingen</option>
                    }

                </select>
            </div>
            <partial name="OrderIndexPartialView" model="@Model" />
        </div>
    </div>
</section>

