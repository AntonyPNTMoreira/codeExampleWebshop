@model ProductCreateEditViewModel
<form asp-controller="Product" asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="form-group py-2">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group py-2">
        <label asp-for="Price"></label>
        <input asp-for="Price" onfocus="this.select()" class="form-control">
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group py-2">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control">
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group py-2">
        <label asp-for="CategoryId"></label>
        <select class="form-control form-select"
                asp-for="CategoryId" asp-items="@Model.Categories"></select>
    </div>

    <div class="form-group py-2">
        <label asp-for="FormOfEducationId"></label>
        <select class="form-control form-select"
                asp-for="FormOfEducationId" asp-items="@Model.FormOfEducations"></select>
    </div>
    <div class="form-group py-2">
        <label asp-for="Images">Afbeelding(en)</label>
        <input asp-for="Images" type="file" accept=".png, .jpg, .jpeg" multiple class="form-control">
        <span asp-validation-for="Images" class="text-danger"></span>
    </div>
    <div>
        <span class="text-danger">@TempData["Error"]</span>
    </div>
    <button type="submit" class="btn btn-primary mt-2">Opslaan</button>
    <a asp-area="Admin" asp-controller="Product" asp-action="Index"
       class="btn btn-secondary mt-2">Terugkeren</a>
</form>