@model ProductsIndexViewModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Verwijderde productenn";
}

<div class="row py-lg-5">
    <div class="col-lg-6 col-md-8 mx-auto text-center">
        <h1 class="fw-light">Verwijderde producten</h1>
        <h1>
            <a asp-controller="Product" asp-action="Index"
               class="btn btn-outline-primary">Alle producten</a>
        </h1>
    </div>
</div>
<section class="py-3 container">
    <partial name="ShowProductsPartial" model="@Model" />
</section>